      <%= f.text_field :address1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address2, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
